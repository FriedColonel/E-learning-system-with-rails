<%= form_for @course do |f| %>
  <div class="field mb-3">
    <%= f.text_field :name,
    class:"form-control",
    placeholder:"Name"%>
  </div>

  <div class="field mb-3">
    <%= f.text_field :description,
    class:"form-control",
    placeholder:"Description"%>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
