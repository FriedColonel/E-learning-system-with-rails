<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Word edit</h3></div>
        <div class="card-body">
          <%= form_for @word do |f| %>
            <div class="form-floating mb-3">
              <%= f.text_field :origin, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: "form-control" %>
              <%= f.label :origin %>
            </div>

            <div class="form-floating mb-3">
              <%= f.text_field :hiragana, autocomplete: "Hiragana", placeholder: "hiragana", class: "form-control" %>
              <%= f.label :hiragana %>
            </div>

            <div class="form-floating mb-3">
              <%= f.text_field :meaning, autocomplete: "Meaning", placeholder: "meaning", class: "form-control" %>
              <%= f.label :meaning %>
            </div>

            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
              <%= link_to "Back to word", :back, style: "text-decoration: none;" %>
              <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
