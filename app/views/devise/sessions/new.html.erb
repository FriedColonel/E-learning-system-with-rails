<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-floating mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: "form-control" %>
              <%= f.label :email %>
            </div>

            <div class="form-floating mb-3">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
              <%= f.label :password %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "small" %>
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center py-3">
          <div class="small"><%= link_to "Need an account? Sign up!", new_registration_path(resource_name) %></div>
        </div>
      </div>
    </div>
  </div>
</div>
