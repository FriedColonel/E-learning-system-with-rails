<% if @course.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      There are <%= pluralize(@course.errors.count, "error") %>
    </div>
    <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
